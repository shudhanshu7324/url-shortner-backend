<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="home.css" />
    <title>Home Page</title>
  </head>
  <body>
    <div class="wrapper">
      <h1 class="heading">URL SHORTENER</h1>
      <div class="form">
        <form method="post" action="/api/url">
          <label for="">Enter your original URL: </label>
          <input type="text" name="url" placeholder="https://example.com" />
          <button type="submit">Generate</button>
        </form>
      </div>
      <% if(locals.id) {%>
      <p>
        URL Generated:
        https://url-shortner-backend-80qb.onrender.com/api/url/<%= id %>
      </p>
      <% } %>

      <div class="table">
        <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S. No</th>
            <th>ShortID</th>
            <th>Original Url</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td style="display: flex; justify-content: flex-start; padding-left: 20px;">
                <%= url.redirectUrl %>
              </td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
